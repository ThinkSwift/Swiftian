{% assign lang = page.lang | default: "en" %}
{% assign nav = site.data.navigation[lang] %}
{% assign meta = nav %}

{% if lang == "en" or lang == nil %}
  {% assign prefix = "" %}
  {% assign homePath = "/" %}
{% else %}
  {% assign prefix = "/" | append: lang %}
  {% assign homePath = prefix | append: "/" %}
{% endif %}

{% assign is_rtl = lang == "ar" or lang == "he" %}
{% assign arrow_right = is_rtl | default: false | if true then "←" else "→" %}
{% assign arrow_left  = is_rtl | default: false | if true then "→" else "←" %}
